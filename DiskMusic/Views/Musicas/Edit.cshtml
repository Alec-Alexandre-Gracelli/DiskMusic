@model DiskMusic.Models.Musica

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Musica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MusicaId" />
            <div class="form-group">
                <label asp-for="Album" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.Album">
                    <option value="" selected>Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MusicaNome" class="control-label"></label>
                <input asp-for="MusicaNome" class="form-control" />
                <span asp-validation-for="MusicaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
