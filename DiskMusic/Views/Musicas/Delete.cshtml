@model DiskMusic.ViewModel.DetailsViewModel

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer apagar isso?</h3>
<div>
    <h4>Musica</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicaNome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.AlbumNome)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.MusicaNome)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.AlbumNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MusicaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
