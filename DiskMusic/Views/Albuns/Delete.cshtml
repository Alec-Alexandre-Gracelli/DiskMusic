@model DiskMusic.Models.Album

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer apagar isso?</h3>
<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlbumNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BandaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BandaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumImagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlbumImagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Anolancamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Anolancamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EhFavorito)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EhFavorito)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlbumId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
